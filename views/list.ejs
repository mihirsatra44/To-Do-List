<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>To-Do List</title>
  <link rel="stylesheet" href="styles.css">
</head>

<body>

  <div class="box" id="heading">
    <h1> <%=listTitle %> </h1>
  </div>

  <div class="box">
    <%  for(var i=0;i<newListItem.length;i++){  %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=newListItem[i]._id%>" onChange="this.form.submit()">
          <p><%= newListItem[i].name %> </p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>">
      </form>
    <%  } %>

    <form action="/" method="post" class="item">
      <input type="text" name="item" placeholder="New Item" autocomplete="off">
      <button type="submit" name="list" value="<%= listTitle %>"> +</button>
    </form>
  </div>




</body>

</html>
